    <dependencies>

        <!-- W2V-Modeler -->
        <dependency>
            <groupId>org.librairy</groupId>
            <artifactId>librairy-modeler-w2v</artifactId>
            <version>${modeler.w2v.version}</version>
            <classifier>lib</classifier>
        </dependency>

        <!-- LDA-Modeler -->
        <dependency>
            <groupId>org.librairy</groupId>
            <artifactId>librairy-modeler-lda</artifactId>
            <version>${modeler.lda.version}</version>
            <classifier>lib</classifier>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <!-- Uber-jar -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>librairy-dependencies</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>

            <!-- Github Deploy -->
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <altDeploymentRepository>internal.repo::default::file://${project.build.directory}/mvn-repo</altDeploymentRepository>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
